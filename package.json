{
  "name": "@patimweb/crtstyleguide",
  "version": "0.0.0-development",
  "description": "CRT Style Guide - Retro Lit component library",
  "type": "module",
  "main": "dist/lib/index.js",
  "types": "dist/lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/lib/index.d.ts",
      "import": "./dist/lib/index.js"
    },
    "./styles": "./dist/lib/styles.css",
    "./styles.css": "./dist/lib/styles.css"
  },
  "files": [
    "dist/lib"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:lib": "tsc && vite build --config vite.lib.config.ts && npm run postbuild:lib",
    "postbuild:lib": "rm -f \"dist/lib/patimwep - Verrostete Terminals.mp3\" || true",
    "preview": "vite preview",
    "lint": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "pretty": "npx prettier --write ."
  },
  "peerDependencies": {
    "lit": "^3"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "lit": "^3",
    "semantic-release": "^25.0.2",
    "typescript": "^5.3.0",
    "vite": "^7.3.1"
  },
  "keywords": [
    "lit",
    "web-components",
    "component-library",
    "style-guide",
    "crt",
    "retro"
  ],
  "author": "",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Smotherer007/crtstyleguide.git"
  },
  "homepage": "https://smotherer007.github.io/crtstyleguide/",
  "publishConfig": {
    "access": "public"
  }
}
